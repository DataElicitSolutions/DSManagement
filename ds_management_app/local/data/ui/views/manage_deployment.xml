<dashboard version="1.1" script="dsm_manage_deployment.js" stylesheet="dsm_manage_deployment.css">
  <label>Manage Deployment Server</label>
  <row>
    <panel>
      <html>
        <b>Repository Location: </b> $SPLUNK_HOME/etc/apps/ds_management_app/data/ds_app
        <div id="overlay" style="display: none;">
            <div id="content-wrapper">
                <div id="loader"></div> <!-- Loader -->
                <div id="status_message"></div> <!-- Status message -->
            </div>
        </div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
      <html>
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 20px;">
            <!-- Right Side Dropdown with Button -->
            <div>
                <select id="dropdown">
                     <option value="">Loading...</option>
                </select>
                <button id="modifyButton">Modify</button>
                <button id="removeServerclass">Remove Serverclass</button>
            </div>
            
            <!-- Left Side Buttons -->
            <div>
                <button id="addServerclass">Add Serverclass</button>
            </div>
        </div>
      </html>
    </panel>
  </row>
  <row>
    <panel>
    <html>
    <body>
      <div class="tabs">
          <button class="tab" id="tab1" data-tab="content1">Add Apps</button>
          <button class="tab" id="tab2" data-tab="content2">Add Client</button>
      </div>       
    </body>
    </html>
    </panel>
  </row>
<row>
    <panel depends="$add_app$">
    <html>
    <body>
      <!-- Tab Content (Add Apps) -->
      <div class="content active" id="content1">
          <h3>Select Apps</h3>
          <select id="appDropdown">
              <option value="">Select an App</option>
          </select>
          <button id="addApp">Add</button>
          <br></br>
          <h3>Selected Apps</h3>
          <table id="selectedAppsTable">
              <thead>
                  <tr>
                      <th>App Name</th>
                      <th>Remove App</th>
                  </tr>
              </thead>
              <tbody>
                  <!-- Rows will be dynamically added here -->
              </tbody>
          </table>
      </div>
    </body>
    </html>
    </panel>
  </row>
  <row>
    <panel depends="$add_client$">
    <html>
    <body>
      <!-- Tab Content (Add Client) -->
      <div class="content horizontal-container">
          <div class="filter-item">
              <label for="whitelist">Include (whitelist)</label>
              <textarea id="whitelist" rows="5" placeholder="No results found..."></textarea>
              
              <!-- Checkbox -->
              <label>
                  <input type="checkbox" id="whitelistToggle" />
                  Show advanced whitelist options
              </label>
      
              <!-- Text inputs, initially hidden -->
              <div id="whitelistOptions" class="advanced-options">
                  <label>whitelist.from_pathname</label>
                  <input type="text" id="whitelistFromPathname" placeholder="Pathname (Ex. etc/apps/{app-name}/lookups/{csv-name}" />
                  
                  <label>whitelist.select_field</label>
                  <input type="text" id="whitelistSelectField" placeholder="Field name or positive integer" />
                  
                  <label>whitelist.where_field</label>
                  <input type="text" id="whitelistWhereField" placeholder="Field name or positive integer" />
                  
                  <label>whitelist.where_equals</label>
                  <input type="text" id="whitelistWhereEquals" placeholder="Comma-separated values (e.g., value1,value2)" />
              </div>
          </div>
      
          <div class="filter-item">
              <label for="blacklist">Exclude (blacklist)</label>
              <textarea id="blacklist" rows="5" placeholder="No results found..."></textarea>
              
              <!-- Checkbox -->
              <label>
                  <input type="checkbox" id="blacklistToggle" />
                  Show advanced blacklist options
              </label>
      
              <!-- Text inputs, initially hidden -->
              <div id="blacklistOptions" class="advanced-options">
                  <label>blacklist.from_pathname</label>
                  <input type="text" id="blacklistFromPathname" placeholder="Pathname (Ex. etc/apps/{app-name}/lookups/{csv-name}" />
                  
                  <label>blacklist.select_field</label>
                  <input type="text" id="blacklistSelectField" placeholder="Field name or positive integer"  />
                  
                  <label>blacklist.where_field</label>
                  <input type="text" id="blacklistWhereField" placeholder="Field name or positive integer"  />
                  
                  <label>blacklist.where_equals</label>
                  <input type="text" id="blacklistWhereEquals" placeholder="Comma-separated values (e.g., value1,value2)" />
              </div>
          </div>
      
          <div class="filter-item">
              <label for="machineTypesFilter">Machine Types Filter</label>
              <textarea id="machineTypesFilter" rows="5" placeholder="No results found..."></textarea>
          </div>
      </div>
    </body>
    </html>
    </panel>
  </row>
  <row>
    <panel depends="$submit_panel$">
      <html>
        <div class="button-container">
          <button class="simple-button" id="submitButton">Submit</button>
        </div>
        <div id="overlay" style="display: none;">
            <div id="content-wrapper">
                <div id="loader"></div> <!-- Loader -->
                <div id="status_message"></div> <!-- Status message -->
            </div>
        </div>
      </html>
    </panel>
  </row>
</dashboard>